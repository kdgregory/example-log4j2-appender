<Configuration status="debug" packages="com.kdgregory.sandbox.log4j2" shutdownTimeout="2500">
    <Appenders>
        <LifecycleReportingAppender name="STDOUT">
            <PatternLayout pattern="%d [%t] %-5p %c{1} - %m" />
        </LifecycleReportingAppender>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>