<Configuration status="warn" packages="com.kdgregory.sandbox.log4j2">
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS}  %-5p - ${example:HOSTNAME} ${example:PID} %t - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>